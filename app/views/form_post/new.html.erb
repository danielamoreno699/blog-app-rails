

<html>
  <head>
    <%= stylesheet_link_tag 'post_form' %>
  </head>
  <body>

<div class="wrapper"> 
<div class="form-container">
<h3 class="h3-form-post">Create a new Post</h3>
  <%= form_with model: @post, url: form_posts_path, method: :post, data: { turbo_frame: "new" } do |f| %>


    <%= f.hidden_field :post_id, value: @post.id %>

    <div class="form-group">
      <%= f.label :Title, "Insert a title" %>
      <%= f.text_field :Title, class: 'form-control' %>
      <% if @post.errors[:Title].any? %>
        <div class="error">
          <%= @post.errors[:Title].first %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :Text, "Insert a text" %>
      <%= f.text_area :Text, required: false, class: 'form-control' %>
      <% if @post.errors[:Text].any? %>
        <div class="error">
          <%= @post.errors[:Text].first %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :CommentsCounter, "Number of comments" %>
      <%= f.number_field :CommentsCounter, class: 'form-control' %>
      <% if @post.errors[:CommentsCounter].any? %>
        <div class="error">
          <%= @post.errors[:CommentsCounter].first %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :LikesCounter, "Number of likes" %>
      <%= f.number_field :LikesCounter, class: 'form-control' %>
      <% if @post.errors[:LikesCounter].any? %>
        <div class="error">
          <%= @post.errors[:LikesCounter].first %>
        </div>
      <% end %>
    </div>

    

    <%= f.submit 'Create Form Post', class: 'btn btn-primary' %>
  <% end %>
</div>
</div>
</body>
</html>