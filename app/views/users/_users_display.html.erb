<div class="container-users">
  <% @users.each do |user| %>
    <%= link_to user_path(user) do %>
    <div class="user-info">
        <%= image_tag(user.photo, class: 'img-user') %>
      <% end %>
      <ul class="ul-users">
        <li><%= link_to user.name, user_path(user), class: 'custom-link' %></li>
        <li>Number of posts: <%= user.post_counter %></li>
      </ul>
    </div>
  <% end %>
</div>
