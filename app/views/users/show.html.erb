<h1>User Details</h1>

<html>
  <head>
    <%= stylesheet_link_tag 'users_styles' %>
  </head>
  <body>
  <div class="container-user">
  <img src="" class="img-user-s">
  <ul class="ul-user">
    <li>User Name: <%= @user.name %></li>
    <li>User Posts: <%= @user.post_counter %></li>
  </ul>
</div>

<div class="user-bio">
    <p class="bio-p">user : <%= @user.name %></p>
    <p><%= @user.bio %></p>
</div>



<div class="users-posts">
  <% @user.posts.each do |post| %>
    <div class="post">
      <h4><%= link_to post.Title, user_posts_path(user_id: @user.id) %></h4>

      
      <p><%= post.Text %></p>

    <div class="text">
    <p class="comment-text">Comments: <%= post.CommentsCounter.nil? ? 0 : post.CommentsCounter %></p>
    <p>Likes: <%= post.LikesCounter.nil? ? 0 : post.LikesCounter %></p>
    </div>
     
    </div>
  <% end %>
</div>


</body>
</html>





